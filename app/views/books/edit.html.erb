<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local: true do |f| %>
  <div>Title<div>
  <%= f.text_field :title %>
  <div>Body</div>
  <%= f.text_area :body %>
  <div>
  <%= f.submit 'Update Book' %>  
  </div>
<% end %>

